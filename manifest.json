{
  "manifest_version": 3,
  "name": "TabZen",
  "version": "1.1",
  "description": "Enhances the viewing experience for guitar, bass, and drum tabs & chords by removing intrusive promotional overlays.",
  "permissions": [
    "storage",
    "tabs",
     "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.songsterr.com/*",
    "https://tabs.ultimate-guitar.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.songsterr.com/*",
        "https://tabs.ultimate-guitar.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
